<p id="notice"><%= notice %></p>

<h1 class="font-weight-bold text-center my-2">Posts</h1>

<h2 class="font-weight-bold">Buscador</h2>
  <%= form_tag(root_path, method: :get, remote: true) do %>
    <%= text_field_tag :q, nil, placeholder: 'Buscar...', class: 'form-control mb-2' %>
    <%= submit_tag 'Buscar', class: 'btn btn-primary' %>
  <% end %>

<h2 class="font-weight-bold mt-5">Crear Nuevo Post</h2>

<%= render 'form' %>

<table class="table table-striped mt-2">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="tbody">
    <% @posts.each do |post| %>
      <tr id="post_<%= post.id %>">
        <%= render post %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
